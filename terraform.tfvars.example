# AWS Configuration
region      = "eu-central-1"
environment = "dev"

# Project Configuration
project_name = "eks-monitoring"
cluster_name = "monitoring-cluster"
cluster_version = "1.28"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["eu-central-1a", "eu-central-1b", "eu-central-1c"]
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnet_cidrs  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# EKS Node Group Configuration (for development/learning)
node_group_instance_types = ["t3.large"]
node_group_desired_size   = 3
node_group_min_size       = 2
node_group_max_size       = 6
node_group_disk_size      = 100

# S3 Retention Policies for Loki Logs
loki_chunks_retention_days  = 30
loki_chunks_ia_days         = 90
loki_chunks_glacier_days    = 180
loki_chunks_expiration_days = 365

# S3 Retention Policies for Prometheus Metrics
prometheus_retention_days   = 30
prometheus_ia_days          = 90
prometheus_glacier_days     = 180
prometheus_expiration_days  = 730

# S3 Configuration
enable_s3_versioning = true

# Cluster Add-ons
enable_cluster_autoscaler = true
enable_ebs_csi_driver     = true
enable_alb_controller     = true

# Monitoring Configuration
monitoring_namespace = "monitoring"

# Additional Tags
additional_tags = {
  Owner      = "DevOps"
  Terraform  = "true"
  CostCenter = "Engineering"
}